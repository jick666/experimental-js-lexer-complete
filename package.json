{
  "name": "experimental-js-lexer",
  "version": "0.1.0",
  "description": "A modular, adaptive JavaScript lexer designed for autonomous Codex agents.",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf dist coverage",
    "build": "npm run clean && babel src --out-dir dist && tsc",
    "lint": "eslint . --fix",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --config jest.config.cjs --coverage",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jick666/experimental-js-lexer-complete.git"
  },
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^19.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@commitlint/cli": "^17.6.0",
    "@commitlint/config-conventional": "^17.6.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^9.0.0",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/npm": "^9.0.0",
    "@semantic-release/release-notes-generator": "^10.0.0",
    "babel-jest": "^30.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-jsdoc": "^51.0.1",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^14.0.0",
    "rimraf": "^5.0.0",
    "semantic-release": "^24.2.5",
    "typescript": "^5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged",
      "commit-msg": "npx --no-install commitlint --edit \"$1\""
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.js": [
      "npm test -- --findRelatedTests",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
